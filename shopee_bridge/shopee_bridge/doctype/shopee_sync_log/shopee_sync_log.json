{
  "doctype": "DocType",
  "name": "Shopee Sync Log",
  "module": "Shopee Bridge",
  "issingle": 0,
  "custom": 0,
  "istable": 0,
  "autoname": "naming_series:",
  "naming_series": "SHSYNC-.YYYY.MM.-.#####",
  "title_field": "job",
  "search_fields": "job,key_ref,sync_type,status",
  "fields": [
    {
      "fieldname": "naming_series",
      "fieldtype": "Select",
      "label": "Series",
      "options": "SHSYNC-.YYYY.MM.-.",
      "default": "SHSYNC-.YYYY.MM.-.",
      "reqd": 1
    },
    {
      "fieldname": "sync_type",
      "fieldtype": "Select",
      "label": "Sync Type",
      "options": "orders\nreturns\nshipping\nfinance\nwebhook",
      "reqd": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "status",
      "fieldtype": "Select",
      "label": "Status",
      "options": "running\nqueued\nskipped\nsuccess\npartial\nfailed\ninfo\nerror",
      "reqd": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "job",
      "fieldtype": "Data",
      "label": "Job",
      "reqd": 1,
      "in_standard_filter": 1
    },
    {
      "fieldname": "key_ref",
      "fieldtype": "Data",
      "label": "Key Reference",
      "in_standard_filter": 1
    },
    { "fieldname": "from_ts", "fieldtype": "Datetime", "label": "From" },
    { "fieldname": "to_ts",   "fieldtype": "Datetime", "label": "To" },
    { "fieldname": "total",   "fieldtype": "Int", "label": "Total" },
    { "fieldname": "success", "fieldtype": "Int", "label": "Success" },
    { "fieldname": "failed",  "fieldtype": "Int", "label": "Failed" },
    { "fieldname": "notes",   "fieldtype": "Long Text", "label": "Notes" },
    {
      "fieldname": "payload_sample",
      "fieldtype": "Long Text",
      "label": "Payload Sample"
    },
    {
      "fieldname": "log_tail",
      "fieldtype": "Long Text",
      "label": "Recent Log Lines",
      "read_only": 1,
      "description": "Appended by write_log helper; last ~200 lines"
    },
    {
      "fieldname": "last_updated",
      "fieldtype": "Datetime",
      "label": "Last Updated",
      "read_only": 1
    }
  ]
}
